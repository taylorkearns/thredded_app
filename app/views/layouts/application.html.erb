<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :page_title %></title>
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'head' %>

    <%= favicon_link_tag 'favicon.ico', rel: 'shortcut icon', type: nil %>
    <%= favicon_link_tag 'favicon.png', rel: 'shortcut icon', type: nil %>
    <%= favicon_link_tag 'humans.txt', rel: 'author', type: nil %>

    <%= favicon_link_tag 'touch-icon-iphone.png', type: nil, rel: 'apple-touch-icon-precomposed' %>
    <%= favicon_link_tag 'touch-icon-ipad.png', type: nil, rel: 'apple-touch-icon-precomposed', sizes: '72x72'  %>
    <%= favicon_link_tag 'touch-icon-iphone-retina.png', type: nil, rel: 'apple-touch-icon-precomposed', sizes: '114x114' %>
    <%= favicon_link_tag 'touch-icon-ipad-retina.png', type: nil, rel: 'apple-touch-icon-precomposed', sizes: '144x144' %>
    <%= favicon_link_tag 'startup-320x460.png', type: nil, rel: 'apple-touch-startup-image', media: 'screen and (max-device-width : 320px)' %>
    <%= favicon_link_tag 'startup-640x920.png', type: nil, rel: 'apple-touch-startup-image', media: '(max-device-width : 480px) and (-webkit-min-device-pixel-ratio : 2)' %>
    <%= favicon_link_tag 'startup-640x1096.png', type: nil, rel: 'apple-touch-startup-image', media: '(max-device-width : 548px) and (-webkit-min-device-pixel-ratio : 2)' %>

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="Thredded">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <%= csrf_meta_tag %>
  </head>
  <body id="<%= yield :page_id %>" class="layout-application" <%= extra_data %>>
    <header>
      <nav id="site_wide">
        <% if app_config %>
          <h1>
            <a href="/" title="<%= app_config.description %>"><%= app_config.title %></a>
          </h1>
        <% end %>
        <ul>
          <%= render 'devise/menu/registration_items' %>
          <%= render 'devise/menu/login_items' %>
        </ul>
      </nav>
      <a href="#" class="show-for-small menu_shortcut">Site Nav</a>
    </header>

    <section id="contentwrap">
      <%= render 'shared/error_msgs' %>
      <section id="content">
        <%= yield %>
      </section>
    </section>

    <footer>
      <ul>
        <li><a href="/">thredded</a> &copy; <%= Time.now.year %> joel oliveira (<a href="http://twitter.com/jayroh">@jayroh</a>)</li>
        <li>An open source ruby on rails messageboard / forum. Want to make it better? Fork at <a href="https://github.com/jayroh/thredded">github</a>!</li>
      </ul>
    </footer>

    <%= javascript_include_tag 'application' %>
    <%= render 'shared/google_analytics' %>
  </body>
</html>
